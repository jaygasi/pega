{
  "name": "Jaygasi_Extensions_pdfViewerBlob",
  "label": "PDF Viewer Blob",
  "description": "A component to display a PDF document from a base64 source.",
  "organization": "Jaygasi",
  "version": "1.0.0",
  "library": "Extensions",
  "allowedApplications": [],
  "componentKey": "Jaygasi_Extensions_pdfViewerBlob",
  "type": "Field",
  "subtype": "Text",
  "icon": "images/pz-attachment-active.svg",
  "properties": [
    {
      "name": "label",
      "label": "Field label",
      "format": "TEXT",
      "required": true
    },
    {
      "name": "readOnly",
      "label": "Edit mode",
      "format": "READONLY"
    },
    {
      "label": "Display Settings",
      "format": "GROUP",
      "properties": [
        {
          "name": "height",
          "label": "Height (px)",
          "format": "NUMBER",
          "placeholder": "600"
        },
        {
          "name": "helperText",
          "label": "Helper text",
          "format": "TEXT"
        }
      ]
    },
    {
      "label": "Search and Highlight",
      "format": "GROUP",
      "properties": [
        {
          "name": "highlightPropRef",
          "label": "Highlight Text From Property",
          "description": "Optional. Select a property whose value will be highlighted in the PDF. E.g., .SearchTerm",
          "format": "PROPERTY"
        },
        {
          "name": "highlightTextStatic",
          "label": "Highlight Static Text (for testing)",
          "description": "Optional. Enter static text to highlight in the PDF.",
          "format": "TEXT"
        }
      ]
    },
    {
      "label": "Debugging",
      "format": "GROUP",
      "properties": [
        {
          "name": "enableDebugging",
          "label": "Enable Debug Logs",
          "format": "BOOLEAN",
          "defaultValue": false
        }
      ]
    },
    {
      "label": "Conditions",
      "format": "GROUP",
      "properties": [
        {
          "name": "visibility",
          "label": "Visibility",
          "format": "VISIBILITY"
        }
      ]
    },
    {
      "label": "Advanced",
      "format": "GROUP",
      "collapsible": true,
      "properties": [
        {
          "name": "testId",
          "label": "Test ID",
          "format": "TEXT",
          "ignorePattern": "[^-_\\p{N}\\p{L}]",
          "includeAnnotations": false
        }
      ]
    }
  ],
  "defaultConfig": {
    "label": "@L $this.label",
    "pdfSource": "@P .$this.name",
    "height": "600"
  }
}

