{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "./UI_Gallery/src/**/*",
    "./UI_Gallery/.storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
